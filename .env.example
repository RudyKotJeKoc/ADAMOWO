# Radio Adamowo Environment Configuration
# Copy this to .env and customize for your deployment

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=radio_adamowo
DB_USER=radio_user
DB_PASS=your_secure_password
DB_CHARSET=utf8mb4

# Application Settings
DEBUG=false
BASE_URL=https://radioadamowo.pl
FRONTEND_URL=https://radioadamowo.pl

# Stream Configuration  
STREAM_URL=https://stream.radioadamowo.pl/live.m3u8
FALLBACK_STREAM=https://backup.radioadamowo.pl/stream
BACKUP_STREAM=https://stream2.radioadamowo.pl/live

# Security Settings
CSRF_TOKEN_LIFETIME=3600
SESSION_LIFETIME=86400
MAX_LOGIN_ATTEMPTS=5
LOGIN_COOLDOWN=900

# Rate Limiting
RATE_LIMIT_COMMENTS=5
RATE_LIMIT_COMMENTS_PERIOD=600
RATE_LIMIT_TOKENS=30
RATE_LIMIT_TOKENS_PERIOD=60

# Email Configuration (if needed)
SMTP_HOST=mail.radioadamowo.pl
SMTP_PORT=587
SMTP_USER=noreply@radioadamowo.pl
SMTP_PASS=your_email_password
SMTP_FROM=Radio Adamowo <noreply@radioadamowo.pl>

# Analytics & Monitoring (optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
MONITORING_ENDPOINT=