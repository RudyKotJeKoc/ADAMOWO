  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://radioadamowo.pl/"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+radioadamowo",
      "url": "/?handler=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/mpeg": [".mp3"],
        "audio/wav": [".wav"], 
        "audio/ogg": [".ogg"],
        "application/x-mpegURL": [".m3u8"]
      }
    }
  ],
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "handle_links": "preferred",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  "id": "/",
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "permissions": [
    "notifications",
    "audio-playback"
  ],
  "features": {
    "audio": {
      "required": true,
      "formats": ["mp3", "wav", "ogg", "aac", "m4a"]
    },
    "streaming": {
      "required": true,
      "protocols": ["hls", "http"]
    },
    "offline": {
      "required": true,
      "cache_size": "100MB"
    },
    "notifications": {
      "required": false,
      "types": ["basic", "progress"]
    },
    "visualizer": {
      "required": false,
      "canvas": true,
      "webgl": true
    }
  },
  "custom": {
    "radio_adamowo": {
      "version": "3.0.0",
      "api_version": "1.0",
      "supported_browsers": {
        "chrome": ">=90",
        "firefox": ">=88", 
        "safari": ">=14",
        "edge": ">=90"
      },
      "content_rating": {
        "age_minimum": 16,
        "content_warnings": ["psychological_content", "mature_themes"],
        "educational_content": true
      },
      "accessibility": {
        "screen_reader": true,
        "keyboard_navigation": true,
        "high_contrast": true,
        "font_scaling": true
      },
      "analytics": {
        "enabled": true,
        "privacy_compliant": true,
        "gdpr_compliant": true
      }
    }
  }
}